nextflow_process {

    name "Test Process BIOBAMBAM_BAMSORMADUP"
    script "../main.nf"
    process "BIOBAMBAM_BAMSORMADUP"

    tag "modules"
    tag "modules_nfcore"
    tag "biobambam"
    tag "biobambam/bamsormadup"

    test("test_biobambam_bamsormadup_multi_input") {


        when {
            process {
                """
                
                input[0] = [
        [ id:'test', single_end:false ], // meta map
        [file(params.test_data['sarscov2']['illumina']['test_paired_end_bam'], checkIfExists: true), file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true)],
    ]

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") }
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("test_biobambam_bamsormadup_single_input") {
        when {
            process {
                """
                        input[0] = [
        [ id:'test', single_end:false ], // meta map
        [file(params.test_data['sarscov2']['illumina']['test_paired_end_bam'], checkIfExists: true)],
    ]


                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") }
                { assert snapshot(process.out).match() }
            )
        }
    }
    
}

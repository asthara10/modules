nextflow_process {

    name "Test Process HAPLOCHECK"
    script "../main.nf"
    process "HAPLOCHECK"

    tag "modules"
    tag "modules_nfcore"
    tag "haplocheck"

    test("test_haplocheck") {


        when {
            process {
                """
                
                input[0] = [
        [ id:'test' ], // meta map
        file(params.test_data['homo_sapiens']['illumina']['test_mito_vcf'], checkIfExists: true)
    ]

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") }
                { assert snapshot(process.out).match() }
            )
        }

    }

}

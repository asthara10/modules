nextflow_process {

    name "Test Process RAXMLNG"
    script "../main.nf"
    config "./nextflow.config"
    process "RAXMLNG"

    tag "modules"
    tag "modules_nfcore"
    tag "raxmlng"

    test("test_raxmlng_no_bootstrap") {


        when {
            process {
                """
                
                input[0] = [ file(params.test_data['sarscov2']['genome']['informative_sites_fas'], checkIfExists: true) ]

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") }
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("test_raxmlng_bootstrap") {
        when {
            process {
                """
                        input[0] = [ file(params.test_data['sarscov2']['genome']['informative_sites_fas'], checkIfExists: true) ]


                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") }
                { assert snapshot(process.out).match() }
            )
        }
    }
    
}

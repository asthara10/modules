nextflow_process {

    name "Test Process KMCP_COMPUTE"
    script "../main.nf"
    process "KMCP_COMPUTE"

    tag "modules"
    tag "modules_nfcore"
    tag "kmcp"
    tag "kmcp/compute"

    test("test_kmcp_compute") {


        when {
            process {
                """
                
                input[0] = [
        [ id:'test', single_end:false ], // meta map
        file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
    ]

                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") }
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("test_kmcp_compute_directory") {
        when {
            process {
                """
                        input[0] = UNTAR ( [
            [ id:'test' ],
            file("https://github.com/nf-core/test-datasets/raw/modules/data/delete_me/kmcp/kmcp_profile.tar.gz", checkIfExists: true)
        ]).untar


                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("versions") }
                { assert snapshot(process.out).match() }
            )
        }
    }
    
}
